@model IEnumerable<Thing1.Models.payment>

@{
    ViewBag.Title = "Index";
}

<h2>User Payment History</h2>

<table class="table">
    <tr>
        <th>
            Payment Date
        </th>
        <th>
            Amount
        </th>
        <th>
            Item Purchased
        </th>
        <th>
            @Html.DisplayNameFor(model => model.payment_duration)
        </th>
        <th>
            User E-mail
        </th>
        <th>
            Club Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.payment_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.payment_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.payment_duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Club.name)
        </td>

    </tr>
}

</table>
